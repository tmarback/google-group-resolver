<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN" "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Allow long test files -->
    <suppress checks="FileLength"
        files="(test|integrationTest).*"
    />
    <!-- Allow test packages to not be documented -->
    <suppress checks="JavadocPackage"
        files="(test|integrationTest).*"
    />
    <!-- Test classes do not need constructors -->
    <suppress checks="MissingCtor"
        files="(test|integrationTest).*"
    />
    <suppress checks="HideUtilityClassConstructor"
        files="(test|integrationTest).*"
    />
    <!-- Allow unrestricted string literals and magic numbers in test classes -->
    <suppress checks="MultipleStringLiterals"
        files="(test|integrationTest).*"
    />
    <suppress checks="MagicNumber"
        files="(test|integrationTest).*"
    />
    <!-- Allow static and star imports in test classes -->
    <suppress checks="AvoidStaticImport"
        files="(test|integrationTest).*"
    />
    <suppress checks="AvoidStarImport"
        files="(test|integrationTest).*"
    />
    <!-- Allow any order on tests for better test ordering -->
    <suppress checks="InnerTypeLast"
        files="(test|integrationTest).*"
    />
    <!-- Allow test annotations to use any style for maintainability of parameter lists -->
    <suppress checks="AnnotationUseStyle"
        files="(test|integrationTest).*"
    />
    <!-- Test files don't need to fully document methods -->
    <suppress checks="JavadocMethod"
        files="(test|integrationTest).*"
    />
</suppressions>